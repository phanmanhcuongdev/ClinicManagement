<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?> <?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/17.0.14" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.AppointmentManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Quản lý Lịch hẹn">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefreshAction" text="Làm Mới" />
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Tìm kiếm:" />
        <TextField fx:id="searchField" promptText="Tên bệnh nhân, bác sĩ..." HBox.hgrow="ALWAYS" /> <Label text="Trạng thái:" />
        <ComboBox fx:id="statusFilterComboBox" prefWidth="150.0" promptText="Tất cả" /> <VBox.margin>
        <Insets bottom="5.0" /> </VBox.margin>
    </HBox>


    <TableView fx:id="appointmentTable" prefHeight="600.0" prefWidth="1000.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="appointmentIdCol" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="patientNameCol" prefWidth="180.0" text="Bệnh nhân" />
            <TableColumn fx:id="doctorNameCol" prefWidth="180.0" text="Bác sĩ" />
            <TableColumn fx:id="departmentNameCol" prefWidth="150.0" text="Khoa" />
            <TableColumn fx:id="startTimeCol" prefWidth="160.0" text="Thời gian Bắt đầu" />
            <TableColumn fx:id="statusCol" prefWidth="100.0" text="Trạng Thái" />
            <TableColumn fx:id="reasonCol" prefWidth="250.0" text="Lý do Khám" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>