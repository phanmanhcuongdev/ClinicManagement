<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #87CEEB;" xmlns="http://javafx.com/javafx/17.0.14" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.LoginController">
    <children>
        <Pane maxHeight="380.0" maxWidth="445.0" prefHeight="380.0" prefWidth="445.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 10;" StackPane.alignment="CENTER">
            <children>
                <Label layoutX="126.0" layoutY="80.0" text="Tên đăng nhập" />
                <Label layoutX="126.0" layoutY="143.0" prefHeight="28.0" prefWidth="79.0" text="Mật khẩu" />
                <HBox alignment="CENTER" focusTraversable="true" layoutY="233.0" prefHeight="36.0" prefWidth="445.0">
                    <effect>
                        <Glow />
                    </effect>
                    <children>
                        <Label prefHeight="28.0" prefWidth="213.0" text="Bạn chưa có tài khoản ?" />
                        <Hyperlink fx:id="registerLink" onAction="#handleRegister" prefHeight="36.0" prefWidth="86.0" text="Đăng ký" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" layoutY="280.0" prefHeight="50.0" prefWidth="445.0">
                    <children>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" style="-fx-background-color: #1e7fc9;" text="Đăng nhập" textAlignment="CENTER" textFill="WHITE">
                            <font>
                                <Font name="Tahoma Bold" size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <HBox alignment="CENTER" layoutY="160.0" prefHeight="42.0" prefWidth="445.0">
                    <children>
                        <PasswordField fx:id="passwordField" prefHeight="25.0" prefWidth="200.0">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </PasswordField>
                    </children>
                </HBox>
                <HBox alignment="CENTER" layoutY="14.0" prefHeight="50.0" prefWidth="445.0">
                    <children>
                        <Label alignment="TOP_LEFT" style="-fx-background-color: #FFFFFF;" text="OOP4" textAlignment="CENTER" textFill="#1e7fc9">
                            <font>
                                <Font name="Tahoma Bold" size="24.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <Label fx:id="statusLabel" alignment="CENTER" layoutY="208.0" prefHeight="36.0" prefWidth="445.0">
                    <font>
                        <Font name="Segoe UI" size="18.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" layoutY="101.0" prefHeight="42.0" prefWidth="445.0">
                    <children>
                        <TextField fx:id="usernameField" prefHeight="25.0" prefWidth="200.0">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextField>
                    </children>
                </HBox>
            </children>
            <effect>
                <DropShadow offsetX="3.0">
                    <color>
                        <Color opacity="0.7690355777740479" />
                    </color>
                </DropShadow>
            </effect>
        </Pane>
    </children>
</StackPane>
