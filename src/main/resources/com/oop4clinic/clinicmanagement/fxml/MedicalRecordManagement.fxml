<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.MedicalRecordManagementController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Quản lý Hồ sơ Bệnh án">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefreshAction" text="Làm Mới" />
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </HBox>

    <TextField fx:id="searchField" promptText="Tìm kiếm theo tên bệnh nhân, bác sĩ, chẩn đoán..." />

    <TableView fx:id="recordTable" prefHeight="600.0" prefWidth="1000.0" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="recordIdCol" prefWidth="60.0" text="ID Hồ Sơ" />
            <TableColumn fx:id="patientNameCol" prefWidth="180.0" text="Bệnh nhân" />
            <TableColumn fx:id="doctorNameCol" prefWidth="180.0" text="Bác sĩ Khám" />
            <TableColumn fx:id="createdAtCol" prefWidth="150.0" text="Ngày Tạo" />
            <TableColumn fx:id="diagnosisCol" prefWidth="250.0" text="Chẩn đoán" />
            <TableColumn fx:id="symptomsCol" prefWidth="200.0" text="Triệu chứng" />
            <TableColumn fx:id="editCol" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Chỉnh Sửa" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>