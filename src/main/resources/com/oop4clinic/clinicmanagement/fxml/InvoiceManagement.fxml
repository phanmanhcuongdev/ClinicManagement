<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" style="-fx-background-color: #f7f9fc;" xmlns="http://javafx.com/javafx/17.0.14" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.InvoiceManagementController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label style="-fx-text-fill: #2c3e50;" text="📄 Quản lý Hóa đơn">
            <font>
                <Font name="Segoe UI Semibold" size="24" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="refreshButton" onAction="#handleRefreshAction" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;                        -fx-background-radius: 6; -fx-cursor: hand;" text="⟳ Làm Mới" />
        <VBox.margin>
            <Insets bottom="10" />
        </VBox.margin>
    </HBox>

    <!-- Search box -->
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="🔍 Tìm kiếm theo tên bệnh nhân hoặc ID hóa đơn..." style="-fx-background-radius: 6; -fx-background-color: white;                           -fx-border-color: #dce1e6; -fx-border-radius: 6;                           -fx-padding: 6; -fx-font-size: 14;" />
    </HBox>

    <!-- Table -->
    <TableView fx:id="invoiceTable" prefHeight="600" prefWidth="900" style="-fx-background-color: white; -fx-border-color: #dce1e6;                       -fx-border-radius: 8; -fx-background-radius: 8;                       -fx-table-cell-border-color: transparent;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="invoiceIdCol" prefWidth="80" text="ID Hóa Đơn" />
            <TableColumn fx:id="patientNameCol" prefWidth="200" text="Bệnh Nhân" />
            <TableColumn fx:id="createdAtCol" prefWidth="180" text="Ngày Tạo" />
            <TableColumn fx:id="totalAmountCol" prefWidth="140" style="-fx-alignment: CENTER-RIGHT;" text="Tổng Tiền" />
            <TableColumn fx:id="statusCol" prefWidth="140" text="Trạng Thái" />
            <TableColumn fx:id="actionCol" prefWidth="140" style="-fx-alignment: CENTER;" text="Thanh Toán" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
