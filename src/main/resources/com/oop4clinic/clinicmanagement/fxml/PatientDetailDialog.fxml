<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox prefWidth="650.0" spacing="15.0" style="-fx-background-color: #87CEEB;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.doctor.PatientDetailDialogController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-text-fill: BLACK; -fx-font-family: 'Tahoma Bold';" text="Thông tin chi tiết bệnh nhân">
            <font>
                <Font size="24.0" />
            </font>
            <effect>
                <DropShadow blurType="GAUSSIAN" height="5.0" radius="2.0" width="5.0">
                    <color>
                        <Color opacity="0.3" />
                    </color>
                </DropShadow>
            </effect>
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </Label>

        <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 8;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <effect>
                <DropShadow>
                    <color>
                        <Color opacity="0.2" />
                    </color>
                </DropShadow>
            </effect>
            <children>
                <GridPane hgap="10.0" vgap="12.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label style="-fx-font-size: 16.0; -fx-text-fill:  #333;" text="Họ và tên:" textFill="#030303" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="patientNameLabel" style="-fx-font-size: 16.0; -fx-font-weight: bold; -fx-text-fill: #333;" text="[Tên]" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label style="-fx-font-size: 16.0; -fx-text-fill:  #333;" text="Giới tính:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label fx:id="patientGenderLabel" style="-fx-font-size: 16.0; -fx-font-weight: bold; -fx-text-fill: #333;" text="[Giới tính]" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label style="-fx-font-size: 16.0; -fx-text-fill:  #333;" text="Ngày sinh:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label fx:id="patientDobLabel" style="-fx-font-size: 16.0; -fx-font-weight: bold; -fx-text-fill: #333;" text="[Ngày sinh]" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label style="-fx-font-size: 16.0; -fx-text-fill:  #333;" text="Số điện thoại:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <Label fx:id="patientPhoneLabel" style="-fx-font-size: 16.0; -fx-font-weight: bold; -fx-text-fill: #333;" text="[SĐT]" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>
            </children>
        </VBox>

        <VBox spacing="10.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <effect>
                <DropShadow>
                    <color>
                        <Color opacity="0.2" />
                    </color>
                </DropShadow>
            </effect>
            <children>
                <Label style="-fx-font-family: 'Tahoma Bold'; -fx-font-size: 18.0; -fx-text-fill: #1e88e5;" text="Lịch sử hồ sơ bệnh án">
                    <VBox.margin>
                        <Insets bottom="5.0" />
                    </VBox.margin>
                </Label>

                <TableView fx:id="historyTable" fixedCellSize="45.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colHistoryDate" prefWidth="120.0" text="Ngày khám" style="-fx-font-size: 16.0; "/>
                        <TableColumn fx:id="colHistorySymptoms" prefWidth="150.0" text="Triệu chứng" style="-fx-font-size: 16.0; " />
                        <TableColumn fx:id="colHistoryDiagnosis" prefWidth="150.0" text="Chẩn đoán" style="-fx-font-size: 16.0; "/>
                        <TableColumn fx:id="colHistoryPrescription" prefWidth="170.0" text="Đơn thuốc" style="-fx-font-size: 16.0; "/>
                        <TableColumn fx:id="colHistoryNotes" prefWidth="150.0" style="-fx-alignment: center; -fx-font-size: 16.0; " text="Ghi chú" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <placeholder>
                        <Label text="Chưa có hồ sơ bệnh án nào." />
                    </placeholder>
                </TableView>
            </children>
        </VBox>
    </children>
</VBox>
