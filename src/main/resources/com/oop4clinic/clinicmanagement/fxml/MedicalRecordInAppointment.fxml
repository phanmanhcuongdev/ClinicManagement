<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane  fx:id="medicalRecordContentPane"  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.doctor.MedicalRecordInfoController">

    <Pane prefWidth="200.0"   AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0">
        <children>
            <Label layoutX="61.0" layoutY="41.0" text="OOP4" textFill="#1e7fc9e8">
                <font>
                    <Font name="Tahoma Bold" size="25.0" />
                </font>
            </Label>
            <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="31.0" layoutY="119.0">
                <image>
                    <Image url="@../../../../image/benhnhan.jpg" />
                </image>
            </ImageView>
            <Hyperlink fx:id="patientInfo" layoutX="72.0" layoutY="125.0" onAction="#handleShowPatientInfo" text="Bệnh nhân" textFill="#1e7fc9">
                <font>
                    <Font name="Tahoma Bold" size="15.0" />
                </font>
            </Hyperlink>
            <ImageView fitHeight="32.0" fitWidth="35.0" layoutX="31.0" layoutY="204.0">
                <image>
                    <Image url="@../../../../image/lich.jpg" />
                </image>
            </ImageView>
            <Hyperlink fx:id="mainContentPane" layoutX="75.0" layoutY="210.0" onAction="#handleShowAppointments" text="Lịch hẹn" textFill="#1e7fc9">
                <font>
                    <Font name="Tahoma Bold" size="15.0" />
                </font>
            </Hyperlink>
            <ImageView fitHeight="35.0" fitWidth="30.0" layoutX="33.0" layoutY="283.0">
                <image>
                    <Image url="@../../../../image/hoso.jpg" />
                </image>
            </ImageView>
            <Hyperlink fx:id="MedicalRecordInfo" layoutX="77.0" layoutY="285.0"   prefHeight="27.0" prefWidth="86.0" text="Hồ sơ" textFill="#1e7fc9">
                <font>
                    <Font name="Tahoma Bold" size="15.0" />
                </font>
            </Hyperlink>
            <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="31.0" layoutY="354.0">
                <image>
                    <Image url="@../../../../image/account.png" />
                </image>
            </ImageView>
            <Hyperlink fx:id="myProfileLink" layoutX="61.0" layoutY="348.0" onAction="#handleShowMyProfile" prefHeight="46.0" prefWidth="147.0" text="Thông tin cá nhân" textFill="#1e7fc9">
                <font>
                    <Font name="Tahoma Bold" size="14.0" />
                </font>
            </Hyperlink>
            <Button fx:id="btnLogout" onAction="#handleLogout" layoutX="57.0" layoutY="479.0" mnemonicParsing="false" style="-fx-background-color: #1e7fc9;" text="Đăng xuất" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Button>
        </children>
    </Pane>


    <BorderPane style="-fx-background-color: #87CEEB;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
                <children>
                    <Label text="Danh sách hồ sơ bệnh Án" textAlignment="CENTER">
                        <font>
                            <Font name="Tahoma Bold" size="25.0" />
                        </font>
                    </Label>
                </children>
                <BorderPane.margin>
                    <Insets bottom="15.0" left="34.0" right="20.0" top="14.0" />
                </BorderPane.margin>
            </HBox>
        </top>

        <center>
            <VBox spacing="10.0">
                <children>
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <children>
                            <Region HBox.hgrow="ALWAYS" />
                            <TextField fx:id="searchField" prefHeight="25.0" prefWidth="165.0" promptText="Tìm theo tên bệnh nhân..." />
                            <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchMedicalRecord" text="Search" />
                            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteMedicalRecord" text="Delete " />
                        </children>
                    </HBox>

                    <TableView fx:id="medicalRecordsTable"  fixedCellSize="60.0" style="-fx-font-size: 16px;" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colRecordId" prefWidth="70.0" text="Mã HS" />
                            <TableColumn fx:id="colRecordPatientName" prefWidth="180.0" text="Tên Bệnh Nhân" />
                            <TableColumn fx:id="colRecordSymptoms" prefWidth="150.0" text="Triệu chứng" />
                            <TableColumn fx:id="colRecordDiagnosis" prefWidth="150.0" text="Chẩn đoán" />
                            <TableColumn fx:id="colRecordPrescription" prefWidth="200.0" text="Đơn thuốc" />
                            <TableColumn fx:id="colRecordNotes" prefWidth="150.0" text="Ghi chú" />
                            <TableColumn fx:id="colRecordDate" prefWidth="100.0" text="Ngày tạo" />
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </children>
                <BorderPane.margin>
                    <Insets bottom="20.0" left="34.0" right="20.0" />
                </BorderPane.margin>
            </VBox>
        </center>
    </BorderPane>
</AnchorPane>
