<BorderPane prefHeight="540.0" prefWidth="960.0" style="-fx-background-color: #3498db;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.patient.MedicalRecordDetailController">
    <top>
        <AnchorPane prefHeight="50.0" style="-fx-background-color: #FFFFFF;">
            <children>
                <Separator layoutY="25.0" AnchorPane.leftAnchor="135.0" AnchorPane.rightAnchor="160.0" />
                <MenuButton mnemonicParsing="false" style="-fx-background-color: #ffffff;" text="Người dùng" textFill="#3498db" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="9.0">
                    <items>
                        <MenuItem fx:id="infoPatient" mnemonicParsing="false" onAction="#handleInfo" text="Thông tin" />
                        <MenuItem fx:id="recordPatient" mnemonicParsing="false" onAction="#handleRecord" text="Hồ sơ khám bệnh" />
                        <MenuItem fx:id="billPatient" mnemonicParsing="false" onAction="#handleBill" text="Hóa đơn" />
                        <MenuItem fx:id="appointmentPatient" mnemonicParsing="false" onAction="#handleAppointment" text="Lịch hẹn" />
                        <MenuItem fx:id="logoutPatient" mnemonicParsing="false" onAction="#handleLogout" text="Đăng xuất" />
                    </items>
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </MenuButton>
                <Button fx:id="homeButton" mnemonicParsing="false" onAction="#home" style="-fx-background-color: #ffffff;" text="OOP4" textFill="#3498db" AnchorPane.leftAnchor="34.0" AnchorPane.topAnchor="2.0">
                    <font>
                        <Font name="Tahoma Bold" size="24.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Chi tiết hồ sơ" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>

                <GridPane style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10;" vgap="10.0" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="30.0" />
                        <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="130.0" vgrow="ALWAYS" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="130.0" vgrow="ALWAYS" />
                    </rowConstraints>
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnSpan="5" GridPane.rowIndex="0">
                            <children>
                                <Label text="Ngày khám:" />
                                <TextField fx:id="dateRecord" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                                <Label text="Bác sĩ:">
                                    <HBox.margin>
                                        <Insets left="20.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="doctorRecord" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                                <Label text="Chuyên khoa:">
                                    <HBox.margin>
                                        <Insets left="20.0" />
                                    </HBox.margin>
                                </Label>
                                <TextField fx:id="departmentRecord" HBox.hgrow="ALWAYS">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </TextField>
                            </children>
                        </HBox>

                        <Label text="Chuẩn đoán:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
                        <TextArea fx:id="diagnosisRecord" prefHeight="127.0" prefWidth="288.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextArea>
                        <Label text="Đơn thuốc:" GridPane.columnIndex="3" GridPane.rowIndex="1" GridPane.valignment="BOTTOM" />
                        <TextArea fx:id="prescriptionRecord" prefHeight="127.0" prefWidth="288.0" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="2">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextArea>

                        <Label text="Triệu chứng:" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.valignment="BOTTOM" />
                        <TextArea fx:id="symptomsRecord" prefHeight="133.0" prefWidth="288.0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextArea>
                        <Label text="Ghi chú:" GridPane.columnIndex="3" GridPane.rowIndex="3" GridPane.valignment="BOTTOM" />
                        <TextArea fx:id="notesRecord" prefHeight="141.0" prefWidth="288.0" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="4">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </TextArea>
                    </children>
                </GridPane>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="31.0" right="29.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
