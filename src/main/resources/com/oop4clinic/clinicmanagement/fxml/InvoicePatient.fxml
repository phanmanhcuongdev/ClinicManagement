<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #87CEEB;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.InvoicePatientController">
    <top>
        <AnchorPane prefHeight="55.0" style="-fx-background-color: #ffffff; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 6);">
            <children>
                <Separator layoutY="30.0" AnchorPane.leftAnchor="133.0" AnchorPane.rightAnchor="160.0" />
                <MenuButton layoutX="805.0" layoutY="15.0" mnemonicParsing="false" style="-fx-background-color: #ffffff;" text="Người dùng" textFill="#1e7fc9" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="15.0">
                    <items>
                        <MenuItem fx:id="infoPatient" mnemonicParsing="false" onAction="#handleInfo" text="Thông tin" />
                        <MenuItem fx:id="recordPatient" mnemonicParsing="false" onAction="#handleRecord" text="Hồ sơ khám bệnh" />
                        <MenuItem fx:id="billPatient" mnemonicParsing="false" onAction="#handleBill" text="Hóa đơn" />
                        <MenuItem fx:id="appointmentPatient" mnemonicParsing="false" onAction="#handleAppointment" text="Lịch hẹn" />
                        <MenuItem fx:id="logoutPatient" mnemonicParsing="false" onAction="#handleLogout" text="Đăng xuất" />
                    </items>
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </MenuButton>
                <Button fx:id="homeButton" layoutX="40.0" layoutY="7.0" mnemonicParsing="false" onAction="#home" style="-fx-background-color: #ffffff;" text="OOP4" textFill="#1e7fc9" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="7.0">
                    <font>
                        <Font name="Tahoma Bold" size="24.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>

                <Label fx:id="hoaDon" text="Hóa đơn" textFill="BLACK">
                    <font>
                        <Font name="System Bold" size="26.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>

                <TableView fx:id="billTable" editable="true" fixedCellSize="50.0" style="-fx-background-color: #F5F5F5; -fx-border-color: #87CEEB; -fx-alignment: center; -fx-font-size: 14;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="orderNumberColumn" prefWidth="50.0" style="-fx-alignment: center;" text="TT" />
                        <TableColumn fx:id="invoiceIdColumn" prefWidth="100.0" style="-fx-alignment: center;" text="Mã hóa đơn" />
                        <TableColumn fx:id="descriptionColumn" prefWidth="400.0" style="-fx-alignment: center;" text="Nội dung thanh toán" />
                        <TableColumn fx:id="statusColumn" prefWidth="150.0" style="-fx-alignment: center;" text="Trạng thái" />
                        <TableColumn fx:id="amountDueColumn" prefWidth="100.0" style="-fx-alignment: center-right;" text="Thành tiền" />
                        <TableColumn fx:id="amountPaidColumn" prefWidth="100.0" style="-fx-alignment: center-right;" text="Đã thanh toán" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="32.0" right="32.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>