<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #87CEEB;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.MedicalRecordController">
    <top>
        <AnchorPane prefHeight="50.0" style="-fx-background-color: #FFFFFF;">
            <children>
                <Separator layoutY="25.0" AnchorPane.leftAnchor="135.0" AnchorPane.rightAnchor="160.0" />
                <MenuButton mnemonicParsing="false" style="-fx-background-color: #ffffff;" text="Người dùng" textFill="#1e7fc9" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="10.0">
                    <items>
                        <MenuItem fx:id="infoPatient" mnemonicParsing="false" onAction="#handleInfo" text="Thông tin" />
                        <MenuItem fx:id="recordPatient" mnemonicParsing="false" onAction="#handleRecord" text="Hồ sơ khám bệnh" />
                        <MenuItem fx:id="billPatient" mnemonicParsing="false" onAction="#handleBill" text="Hóa đơn" />
                        <MenuItem fx:id="appointmentPatient" mnemonicParsing="false" onAction="#handleAppointment" text="Lịch hẹn" />
                        <MenuItem fx:id="logoutPatient" mnemonicParsing="false" onAction="#handleLogout" text="Đăng xuất" />
                    </items>
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </MenuButton>
                <Button fx:id="homeButton" mnemonicParsing="false" onAction="#home" style="-fx-background-color: #ffffff;" text="OOP4" textFill="#1e7fc9" AnchorPane.leftAnchor="35.0" AnchorPane.topAnchor="2.0">
                    <font>
                        <Font name="Tahoma Bold" size="24.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </top>
    <center>
        <VBox alignment="TOP_CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Hồ Sơ Khám Bệnh" textFill="BLACK">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="15.0" /> </VBox.margin>
                </Label>

                <TableView fx:id="medicalRecordTable" editable="true" fixedCellSize="50.0" style="-fx-alignment: center; -fx-font-size: 14;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colTT" prefWidth="50.0" text="TT" />
                        <TableColumn fx:id="colDate" prefWidth="200.0" text="Ngày khám bệnh" />
                        <TableColumn fx:id="colDepartment" prefWidth="200.0" text="Khoa" />
                        <TableColumn fx:id="colDiagnosis" prefWidth="250.0" text="Chuẩn đoán" />
                        <TableColumn fx:id="colStatus" prefWidth="190.0" style="-fx-alignment: center;" text="Trạng thái" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="35.0" right="35.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>