<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oop4clinic.clinicmanagement.controller.PatientManagementController">

    <!-- ========== TOP: CRUD + FILTER ========== -->
    <top>
        <VBox spacing="6">
            <children>
                <!-- HÀNG 1: CRUD -->
                <ToolBar>
                    <items>
                        <Button fx:id="btnNew" onAction="#addPatient" text="Thêm mới" />
                        <Button fx:id="btnEdit" disable="true" onAction="#onEditButtonClicked" text="Sửa" />
                        <Separator orientation="VERTICAL" />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnRefresh" onAction="#Refresh" text="Tải lại" />
                    </items>
                </ToolBar>

                <!-- HÀNG 2: FILTER TÌM KIẾM -->
                <HBox spacing="8">
                    <children>
                        <TextField fx:id="txtSearch" promptText="Tìm theo Tên / SĐT / Email / BHYT / Địa chỉ..." HBox.hgrow="ALWAYS" />
                        <ComboBox fx:id="cboGenderFilter" prefWidth="140" promptText="Giới tính" />
                        <DatePicker fx:id="dpDobFrom" promptText="Ngày sinh từ" />
                        <DatePicker fx:id="dpDobTo" promptText="Ngày sinh đến" />
                        <Button fx:id="btnApplyFilter" defaultButton="true" onAction="#applyFilter" text="Lọc" />
                        <Button fx:id="btnClearFilter" onAction="#clearFilter" text="Xóa lọc" />
                    </children>
                    <padding><Insets bottom="8" left="10" right="10" top="0" /></padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- ========== CENTER: TABLE ========== -->
    <center>
        <VBox spacing="8">
            <children>
                <TableView fx:id="tblPatients" onMouseClicked="#onPatientTableClicked" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colFullName" prefWidth="220" text="Họ và tên" />
                        <TableColumn fx:id="colDob" prefWidth="130" text="Ngày sinh" />
                        <TableColumn fx:id="colPhone" prefWidth="140" text="SĐT" />
                        <TableColumn fx:id="colEmail" prefWidth="220" text="Email" />
                        <TableColumn fx:id="colInsurance" prefWidth="120" text="BHYT" />
                        <TableColumn fx:id="colAddress" prefWidth="300" text="Địa chỉ" />
                    </columns>

                    <!-- context menu nhỏ cho thao tác nhanh (không bắt buộc dùng) -->
                    <contextMenu>
                        <ContextMenu>
                            <items>
                                <MenuItem fx:id="miOpen" onAction="#onOpenClicked" text="Mở chi tiết" />
                            </items>
                        </ContextMenu>
                    </contextMenu>

                    <placeholder>
                        <Label text="Không có dữ liệu. Hãy điều chỉnh bộ lọc hoặc nhấn 'Tải lại'." />
                    </placeholder>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </children>
            <padding><Insets bottom="0" left="10" right="10" top="0" /></padding>
        </VBox>
    </center>

    <!-- ========== BOTTOM: PAGINATION + STATUS ========== -->
    <bottom>
        <VBox spacing="6">
            <children>
                <Pagination fx:id="pagination" maxPageIndicatorCount="10" />
                <HBox spacing="8">
                    <children>
                        <Label text="Trạng thái:" />
                        <Label fx:id="lblStatus" text="Sẵn sàng." />
                        <Pane HBox.hgrow="ALWAYS" />
                        <Label fx:id="lblCount" text="0 bản ghi" />
                    </children>
                    <padding><Insets bottom="8" left="10" right="10" top="0" /></padding>
                </HBox>
            </children>
            <padding><Insets bottom="10" left="10" right="10" top="0" /></padding>
        </VBox>
    </bottom>

    <stylesheets>
        <!-- Bạn có thể trỏ tới CSS riêng nếu muốn tinh chỉnh giao diện -->
        <!-- <URL value="@patient.css"/> -->
    </stylesheets>
</BorderPane>
