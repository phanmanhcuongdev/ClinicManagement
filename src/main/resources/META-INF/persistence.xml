<?xml version="1.0" encoding="utf-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
    <persistence-unit name="clinicDB">
        <class>com.oop4clinic.clinicmanagement.model.entity.Patient</class>
        <class>com.oop4clinic.clinicmanagement.model.entity.Doctor</class>
        <class>com.oop4clinic.clinicmanagement.model.entity.Invoice</class>
        <class>com.oop4clinic.clinicmanagement.model.entity.Department</class>
        <class>com.oop4clinic.clinicmanagement.model.entity.Appointment</class>
        <class>com.oop4clinic.clinicmanagement.model.entity.MedicalRecord</class>
        <class>com.oop4clinic.clinicmanagement.model.entity.User</class>
        <class>com.oop4clinic.clinicmanagement.model.entity.DoctorSchedule</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.sqlite.JDBC"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:sqlite:clinic.db"/>

            <property name="hibernate.dialect" value="org.hibernate.community.dialect.SQLiteDialect"/>

            <property name="hibernate.type.preferred_sql_type_for_temporal" value="TEXT"/>

            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.jdbc.time_zone" value="UTC"/>
        </properties>
    </persistence-unit>
</persistence>